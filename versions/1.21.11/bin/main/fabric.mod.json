    "authors": ["Partacus-SPQR"],
    "contact": {
        "homepage": "https://modrinth.com/project/simpledeathbans",
        "sources": "https://github.com/Partacus-SPQR/SimpleDeathBans"
    },
    "license": "MIT",
    "icon": "assets/simpledeathbans/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": ["com.simpledeathbans.SimpleDeathBans"],
        "client": ["com.simpledeathbans.SimpleDeathBansClient"],
        "modmenu": ["com.simpledeathbans.config.ModMenuIntegration"]
    },
    "mixins": [
        "simpledeathbans.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.18.0",
        "minecraft": "${minecraft}",
        "java": ">=21",
        "fabric-api": "*"
